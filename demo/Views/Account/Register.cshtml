@using Kariyer.Models
@model  Kariyer.Models.Modeller.RegisterModel
@{
	kullanici uss = new kullanici();



	int rols = Convert.ToInt32(Request.QueryString[0]);



}
<style>
	.alt_footer {
		position: absolute;
		bottom: 0 !important;
		width: 100%;
	}

	.loginregcontent {
		padding-top: 100px !important;
		padding-bottom:40px !important;

	 
	}
</style>

<div class="container body-content loginregcontent ">
 
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
					<div style="color:red;margin-bottom:10px;" class="row text-center">Kariyer v0.1</div>
					<div class="panel panel-login">

						<div class="panel-heading">

							<div class="row">

								<div class="col-xs-6">
									<text class="active" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; font-size:x-large; color:indigo">Register </text>

								</div>
							</div>
							<hr>
						</div>
						<div class="panel-body">
							<div class="row">
								<div class="col-lg-12">
									<form id="login-form" action="/Account/Register/?rols=@rols" method="post" role="form" style="display: block;">

										<div class="form-group">
											@Html.TextBoxFor(kul => kul.kullaniciAdi, new { @id = "kul", @class = "form-control", @placeholder = "Kullanıcı Adınız" })
											@Html.ValidationMessageFor(kul => kul.kullaniciAdi, "", new { @class = "text-danger" })
											@TempData["regst2"]
										</div>
										<div class="form-group">
											@Html.TextBoxFor(kul => kul.email, new { @id = "ep", @class = "form-control", @placeholder = "E-mailiniz" })
											@Html.ValidationMessageFor(kul => kul.email, "", new { @class = "text-danger" })
											@TempData["regst2"]

										</div>
										<div class="form-group">
											@Html.PasswordFor(kul => kul.parola, new { @class = "form-control", @placeholder = "Şifreniz" })
											@Html.ValidationMessageFor(kul => kul.parola, "", new { @class = "text-danger" })

										</div>
										<div class="form-group">
											@Html.PasswordFor(kul => kul.parolaconfirm, new { @class = "form-control", @placeholder = "Şifrenizi doğrulayınız" })
											@Html.ValidationMessageFor(kul => kul.parolaconfirm, "", new { @class = "text-danger" })
										</div>
										<div class="form-group">
											<div class="row">
												<div class="col-sm-6 col-sm-offset-3">
													<input type="submit" class="form-control btn btn-register" />
												</div>
											</div>
										</div>
									</form>


								</div>
							</div>
 

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
 
<script>

            $(document).ready(function () {


                if ('@TempData["eposta_k"]' != "" || '@TempData["eposta_k"]' != null) {
                    if ('@TempData["eposta_k"]' == "var") {
                        $("#ep").css({ "border-color": "red" });
                    }
                    else if ('@TempData["eposta_k"]' == "yok") {
                        $("#ep").css({ "border-color": "#ccc" });
                    }
                }


                           if ('@TempData["kayıt_k"]' != "" || '@TempData["kayıt_k"]' != null) {
                       if ('@TempData["kayıt_k"]' == "var") {
                           $("#kul").css({ "border-color": "red"});
            }
                       else if('@TempData["kayıt_k"]' == "yok"){
                           $("#kul").css({ "border-color": "#ccc" });
                       }
        }





            });

</script>
