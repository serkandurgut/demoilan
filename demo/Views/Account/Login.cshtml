                       if ('@TempData["pw_k"]' == "var") {
                           $("#kul").css({ "border-color": "red"});
            }
                       else if('@TempData["pw_k"]' == "yok"){
                           $("#kul").css({ "border-color": "#ccc" });
                       }
                }*@

