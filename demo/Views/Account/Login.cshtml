                    if ('@TempData["login_k"]' == "var") {
                        $("#ep").css({ "border-color": "red" });
                    }
                    else if ('@TempData["login_k"]' == "yok") {
                        $("#ep").css({ "border-color": "#ccc" });
                    }
                }*@


